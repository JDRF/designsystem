    <div class="spirit-container">
      <div class="spirit-container__inner spirit-container__inner--large">
        <h3>Large Container</h3>
      </div>
    </div>

  {% endset %}
  {{ esds_doc.code_example_pair(example="<img src='/images/container/diagram1.png' style='max-width: 100%;'/>", code_snippet_source=code_example) }}

