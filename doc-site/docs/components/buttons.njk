      </div>
      <div class="spirit-doc-button-states-example">
        {{ library.button(text="Resources", class="spirit-button--minimal spirit-button--disabled", disabled="true") }}
        <span class="spirit-doc-button-states-label">Disabled</span>
      </div>
    </div>
  {% endset %}

  {{ esds_doc.code_example_pair(
    examples=[ { example: button_state_example } ],
    code_snippet_source=(library.button(class="spirit-button--minimal", text="Resources") + ' ' + library.button(class="spirit-button--minimal", text="Resources", disabled="true"))
    )
  }}

  {% filter markdown %}
      #### On Dark
      Use instead of secondary button on dark. 
  {% endfilter %}

  {{ esds_doc.code_example_pair( 
    examples=[
      {
        example: library.button(class="spirit-button--minimal", text="Donate"),
        label: "Primary on light"
      },
      {
        example: library.button(class="spirit-button--minimal", text="Donate"),
        label: "Primary on dark",
        class: "spirit-container--dark spirit-container--brand"
      }
    ],
    code_snippet_source=('<div class="spirit-container spirit-container--dark">' + library.button(class="spirit-button--minimal", text="Donate") + '</div>')
  )
  }}

  {% filter markdown %}
      ### Icon Only
  {% endfilter %}

  {{ esds_doc.code_example_pair(examples=[
      {
        example: library.button(class="spirit-button--icon-only", icon="spirit-chevron-right"),
        label: "Default State"
      },
      {
        example: library.button(class="spirit-button--icon-only spirit-button--hover", icon="spirit-chevron-right"),
        label: "Hover"
      },
      {
        example: library.button(class="spirit-button--icon-only spirit-button--active", icon="spirit-chevron-right"),
        label: "Active"
      },
      {
        example: library.button(class="spirit-button--icon-only", icon="spirit-chevron-right", disabled="true"),
        label: "Disabled"
      },
      {
        example: library.button(class="spirit-button--icon-only spirit-button--focus", icon="spirit-chevron-right"),
        label: "Focus"
      }
    ])
  }}

  {% filter markdown %}
      ### Icon Only On Dark
  {% endfilter %}

  {{ esds_doc.code_example_pair(examples=[
      {
        example: '<div class="spirit-container spirit-container--dark">' + library.button(class="spirit-button--icon-only", icon="spirit-chevron-right") + '</div>',
        label: "Default State"
      },
      {
        example: '<div class="spirit-container spirit-container--dark">' + library.button(class="spirit-button--icon-only spirit-button--hover", icon="spirit-chevron-right") + '</div>',
        label: "Hover"
      },
      {
        example: '<div class="spirit-container spirit-container--dark">' + library.button(class="spirit-button--icon-only spirit-button--active", icon="spirit-chevron-right") + '</div>',
        label: "Active"
      },
      {
        example: '<div class="spirit-container spirit-container--dark">' + library.button(class="spirit-button--icon-only", icon="spirit-chevron-right", disabled="true") + '</div>',
        label: "Disabled"
      },
      {
        example: '<div class="spirit-container spirit-container--dark">' + library.button(class="spirit-button--icon-only spirit-button--focus", icon="spirit-chevron-right") + '</div>',
        label: "Focus"
      }
    ])
  }}

  {% filter markdown %}
