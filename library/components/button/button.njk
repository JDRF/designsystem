{% macro button(
      class=false,
      disabled=false,
      text=false,
      icon=false,
      tag="button",
      type=false,
      href=false) %}
  {% if href %}
    {% set tag = 'a' %}
  {% endif %}
  {% if 'input' === tag  %}
    <{{tag}} {{ 'type=' + type if type }} class="spirit-button{{ ' ' + class if class }}" value="{{icon if icon}}{{text if text}}" />
  {% else %}
    <{{tag}} {{ 'type=' + type if type }} class="spirit-button{{ ' ' + class if class }}" {{ 'href=' + href if href }} {{ 'disabled' if disabled }}>
      {% if icon %}
        <svg role="img" aria-label="Open This" class="spirit-icon--chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 22"><title>Open This</title><path d="M8 18c-.3 0-.5-.1-.7-.3-.4-.4-.4-1 0-1.4l5.3-5.3-5.3-5.3c-.4-.4-.4-1 0-1.4s1-.4 1.4 0l6 6c.4.4.4 1 0 1.4l-6 6c-.2.2-.4.3-.7.3z"/></svg>
      {% endif %}
      {{ text if text }}
      <span>this is a span</span>
      <i>this is a i</i>
      <em>this is a span</em>
    </{{tag}}>
    {% endif %}
{% endmacro %}
