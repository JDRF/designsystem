{% macro link(
  class=false,
  text='This is a link',
  href=false,
  target=false,
  type=false,
  label=false,
  role
) %}
  <a 
    class="spirit-link{{ ' ' + class if class }}"
    {% if href %} href="{{ href }}" {% endif %}
    {% if type %} type="{{ type }}" {% endif %}
    {% if target %} target="{{ target }}" {% endif %}
    {% if role %} role="{{ role }}" {% endif %}
    {% if label %} aria-label="{{ label }}" {% endif %}>
      {{text if text}}
      {{ caller() if caller }}
    </a>
{% endmacro %}