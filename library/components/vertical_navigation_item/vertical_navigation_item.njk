{% macro vertical_navigation_item(
  class=false,
  size=false,
  text='This is a vertical nav item',
  href='#',
  target=false,
  style=false,
  toggle=false,
  iconName=false,
  expanded=false,
  parent=false;
) %}
{% if toggle %}
  {% set parent = true %}
{% endif %}
  <li class="spirit-vertical-nav__item{{ ' spirit-vertical-nav__item-parent' if toggle }}{{ ' ' + class if class }}{{ ' spirit-vertical-nav__item--' + size if size }}{{ ' spirit-vertical-nav__item--' + style if style }}{{ ' spirit-vertical-nav__item--toggle' if toggle }}">
      <a class="spirit-vertical-nav__link{{ ' spirit-vertical-nav__link--' + size if size }}{{ ' spirit-vertical-nav__link--' + style if style }}" {{ 'href=' + href if href }} {{ 'tabindex=0 role=button' if parent }} {{ 'target=' + target if target }}{{' aria-haspopup=true aria-expanded='  + expanded if toggle}}>
        {% if iconName %}
          {{ icon(name=iconName, decorative=true)}}
        {% endif %}
        {{text if text}}
        {% if toggle %}
          {{ icon(name="chevron-down", class="spirit-vertical-nav__toggle", label="Open Subnav", decorative=true) }}
        {% endif %}
      </a>
    {{ caller() if caller }}
  </li>
{% endmacro %}