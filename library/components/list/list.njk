{# List #}
{% macro list(
  class=false,
  ordered=false,
  tag="ul"
  )
%}
{% if ordered %}
  {% set tag = 'ol' %}
{% endif %}
  <{{tag}} class="spirit-list{{' ' + class if class}}">
    {{ caller() }}
  </{{tag}}>
{% endmacro %}

{# List Item #}
{% macro list_item(
  class=false,
  title_text="List Item",
  title_meta=false,
  title_tag='h3',
  link=false,
  link_text="View",
  link_secondary=false,
  link_secondary_text="Donate",
  avatar_src=false,
  icon_name=false,
  avatar_src=false,
  meta=false,
  caption=false,
  links_right=false
  )
%}
{% if link and (not title_meta) and (not meta) and (not caption) %}
  {% set links_position = 'right' %}
{% endif %}
{% if title_text %}
  <li class="spirit-list-item{{' spirit-list-item--links-right' if links_position}}{{' spirit-list-item--has-link' if link}}{{' ' + class if class}}">
      {% if avatar_src %}
        <div class="spirit-list-item__avatar">
          {% if link %}
            <a class="spirit-list-item__link-avatar" href="{{link}}">
          {% endif %}
          <img src="{{avatar_src}}">
          {% if link %}
            </a>
          {% endif %}
        </div>
      {% elif icon_name %}
        <div class="spirit-list-item__avatar">
          {% if link %}
            <a class="spirit-list-item__link-avatar" href="{{link}}">
          {% endif %}
          {{ icon(name=icon_name, class='spirit-list-item__icon spirit-icon--' + icon_name, decorative=true)}}
          {% if link %}
            </a>
          {% endif %}
        </div>
      {% endif %}
      <div class="spirit-list-item__content">
        <{{title_tag}} class="spirit-list-item__title">
          {% if link %}
            <a class="spirit-list-item__link-title" href="{{link}}">
          {% endif %}
            {{title_text}}
          {% if link %}
            </a>
          {% endif %}
          {% if title_meta %}
            <span class="spirit-list-item__title-meta">
              {{title_meta}}
            </span>
          {% endif %}
        </{{title_tag}}>
        {% if meta %}
          <p class="spirit-list-item__meta">{{meta}}</p>
        {% endif %}
        {% if caption %}
          <p class="spirit-list-item__caption">{{caption}}</p>
        {% endif %}
        <div class="spirit-list-item__links-contain">
          {% if link %}
            <a class="spirit-list-item__link" href="{{link}}">{{link_text}}</a>
          {% endif %}
          {% if link_secondary %}
            <a class="spirit-list-item__link spirit-list-item__link--secondary" href="{{link_secondary}}">{{link_secondary_text}}</a>
          {% endif %}
        </div>
      </div>
  </li>
{% endif %}
{% endmacro %}