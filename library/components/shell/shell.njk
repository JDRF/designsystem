{% macro shell(
        class=false,
        modifier=false
        ) %}
      <div class="spirit-shell{{' spirit-shell--' + modifier if modifier }}{{ ' ' + class if class}}">
        <div class="spirit-shell__site-contain">
          <div class="spirit-shell__site">
            <a class="spirit-skip-link spirit-screen-reader-text--can-focus" href="#spirit-shell-main">Skip to content</a>
            {{ caller() }}
          </div>
        </div>
      </div>
{% endmacro %}

{% macro shell_header(
      class=false,
      modifier=false
    )
  %}
    <header class="spirit-shell__header{{ ' ' + class if class}}{{' spirit-shell__header--' + modifier if modifier }}">
      {{ caller() }}
    </header>
{% endmacro %}

{% macro shell_main(
      class=false,
      modifier=false
    )
  %}
    <main id="spirit-shell-main" class="spirit-shell__main{{ ' ' + class if class}}{{' spirit-shell__main--' + modifier if modifier }}">
      {{ caller() }}
    </main>
{% endmacro %}

{% macro shell_footer(
      class=false,
      modifier=false
    )
  %}
    <footer class="spirit-shell__footer{{ ' ' + class if class}}{{' spirit-shell__footer--' + modifier if modifier }}">
      {{ caller() }}
    </footer>
{% endmacro %}