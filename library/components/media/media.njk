{% macro objectfitimage(
    container_class="spirit-object-fit",
    type,
    img_src="/images/components/container/800x800.png",
    img_alt_text="Test Image",
    img_src_alt,
    img_class_alt,
    img_caption
    ) %}
    {% if img_src %}
      {% if img_src_alt and not img_class_alt %}
        {% set img_class_alt = container_class + "__image-alt" %}
      {% endif %}
      {% if container_class %}
        {% set component_class = container_class + "__image-wrap" %}
      {% endif %}
      {% if type %}
        {% set type_class = component_class + "--" + type %}
      {% endif %}
      {% if img_caption %}
          <figure class="spirit-card__image-figure" itemprop="image" itemtype="http://schema.org/ImageObject">
      {% endif %}
      <span class="{{component_class}}{{" " + type_class if type_class}}">
        {% if img_src_alt %}
          <img class="{{container_class}}__image {{img_class_alt}}" src="{{ img_src_alt }}" alt="{{ img_alt_text }}">
        {% endif %}
        <img class="{{container_class}}__image" src="{{ img_src }}" alt="{{ img_alt_text }}">
      </span>
      {% if img_caption %}
        <figcaption class="spirit-caption">{{img_caption}}</figcaption>
        </figure>
      {% endif %}
    {% endif %}
{% endmacro %}