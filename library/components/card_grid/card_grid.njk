{% macro card_grid(
      class=false,
      carousel=false,
      card_count=1) %}
  {% if carousel %}
    <div class="spirit-card-carousel">
      <div class="spirit-card-carousel__grid">
  {% endif %}
        <div class="spirit-card-grid{{ ' ' + class if class }}{{ ' spirit-card-grid--carousel' if carousel }}">
          {{ caller() }}
          <!-- These placeholder items prevent any orphaned cards in the last row from stretching to fill the available space -->
          <div class="spirit-card-grid__placeholder"></div>
          <div class="spirit-card-grid__placeholder"></div>
        </div>
  {% if carousel %}
      </div>
      <div class="spirit-card-carousel__controls">
        {{ button(
              class="spirit-card-carousel__button spirit-card-carousel__button--prev spirit-button--secondary spirit-button--icon-only spirit-button--large", iconName="chevron-left", 
              iconLabel="Previous Card", 
              disabled=true)}}
        <div class="spirit-card-carousel__page-indicator">
          <span class="spirit-card-carousel__indicator-dot spirit-card-carousel__indicator-dot--active"></span>
          {% for i in range(1, card_count) %}
            <span class="spirit-card-carousel__indicator-dot"></span>
          {% endfor %}
        </div>
        {{ button(
              class="spirit-card-carousel__button spirit-card-carousel__button--next spirit-button--secondary spirit-button--icon-only spirit-button--large", iconName="chevron-right", 
              iconLabel="Next Card")}}
      </div>
    </div>
  {% endif %}
{% endmacro %}
