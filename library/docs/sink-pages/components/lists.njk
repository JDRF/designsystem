{% extends "templates/sink.njk" %}
{% block body %}
    <h1 class="hostile-sink-reset">Lists Sink</h1>

    <h2 class="hostile-sink-reset">List Meta</h2>
    {% call library.list() %}
        {{ library.list_item(title_meta="$9999") }}
    {% endcall %}

    <h2 class="hostile-sink-reset">List Ordered</h2>
    {% call library.list(ordered="true") %}
        {{ library.list_item(title_meta="$9999") }}
    {% endcall %}

    <h2 class="hostile-sink-reset">List Links</h2>
    {% call library.list() %}
        {{ library.list_item(title_meta="$9999", link="#") }}
        {{ library.list_item(title_meta="$9999", link="#", link_text="Read More") }}
        {{ library.list_item(title_meta="$9999", link="#", link_secondary="#") }}
        {{ library.list_item(title_meta="$9999", link="#", link_text="Read More", link_secondary="#", link_text_secodary="Click Here") }}
    {% endcall %}

    <h2 class="hostile-sink-reset">List Avatar</h2>
