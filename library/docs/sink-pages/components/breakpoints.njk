      {{ library.list_item(href="#", href_text="Read More", href_secondary="#", href_secondary_text="Click Here", image_src="https://picsum.photos/200/300", meta="Western Massachusetts 2018", caption="The Benaroyas are recognized for their long-standing support of JDRF International   New York (July 11, 2018)— JDRF, the leading global…", image_right=true) }}
