            {{ text_only_sample_cards | safe }}
        {% endcall %}
      {% endcall %}
      {% call library.container(background_color="brand") %}
        {% call library.tile_grid() %}
            {{ sample_tiles_large | safe }}
            {{ sample_tiles_large | safe }}
        {% endcall %}
      {% endcall %}
      {% call library.container(wave_bg="wave3") %}
        {% call library.card_grid(class="spirit-card-grid--4-up") %}
            {{ sample_cards | safe }}
        {% endcall %}
