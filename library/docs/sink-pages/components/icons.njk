{% extends "templates/sink.njk" %}
{% block body %}
    {% filter markdown(true, "hostile-sink-reset") %}
        # Icons Sink
    {% endfilter %}
    <div class="spirit-container">
        <div class="spirit-row">
            <div class="spirit-col spirit-col--md-6 spirit-col--lg-4">

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Example Icons
                {% endfilter %}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### On it's own
                {% endfilter %}

                {{ library.icon(
                    name="check",
                    label="Check"
                ) }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### As a stand-alone link
                {% endfilter %}
                <a href="#">
                    {{ library.icon(
                        name="youtube",
                        label="YouTube"
                    ) }}
                </a>

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### In a row
                {% endfilter %}
                {{ library.icon(
                    name="chevron-left",
                    label="Left"
                ) }}
                {{ library.icon(
                    name="chevron-right",
                    label="Right"
                ) }}
                {{ library.icon(
                    name="chevron-up",
                    label="Up"
                ) }}
                {{ library.icon(
                    name="chevron-down",
                    label="Down"
                ) }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### In a paragraph
                {% endfilter %}
                <p style="font-size: 16px;
                    letter-spacing: initial;
                    font-style: normal;
                    text-shadow: none;
                    text-align: left;
                    text-indent: 0;
                    text-transform: initial;
                    color: black;
                    line-height: 1.5;
                    font-weight: normal;
                    font-family: sans-serif;"
                >This is facebook{{ library.icon(
                        name="facebook",
                        label="Facebook",
                        decorative=true
                    ) }}, and <a href="#">this is a link {{ library.icon(
                            name="chevron-right",
                            label="Go Right",
                            decorative=true
                        ) }}</a></p>

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### In larger text
                {% endfilter %}
                <h2 style="font-size: 32px;
                    letter-spacing: initial;
                    font-style: normal;
                    text-shadow: none;
                    text-align: left;
                    text-indent: 0;
                    text-transform: initial;
                    color: black;
                    line-height: 1.3;
                    font-weight: normal;
                    font-family: sans-serif;"
                >This is facebook{{ library.icon(
                        name="facebook",
                        label="Facebook",
                        decorative=true
                    ) }}, and <a href="#">this is a link {{ library.icon(
                            name="chevron-right",
                            label="Go Right",
                            decorative=true
                        ) }}</a></h2>

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### JDRF Icon
                {% endfilter %}

                {{ library.icon(
                    name="jdrf",
                    label="JDRF",
                    class="spirit-icon--jdrf"
                ) }}

                <a href="#">
                    {{ library.icon(
                        name="jdrf",
                        label="JDRF",
                        class="spirit-icon--jdrf"
                    ) }}
                </a>

                <p style="font-size: 16px;
                    letter-spacing: initial;
                    font-style: normal;
                    text-shadow: none;
                    text-align: left;
                    text-indent: 0;
                    text-transform: initial;
                    color: black;
                    line-height: 1.5;
                    font-weight: normal;
                    font-family: sans-serif;"
                >This is JDRF{{ library.icon(
                        name="jdrf",
                        label="JDRF",
                        decorative=true,
                        class="spirit-icon--jdrf"
                    ) }}, and <a href="#">this is a link {{ library.icon(
                            name="jdrf",
                            label="JDRF",
                            decorative=true,
                            class="spirit-icon--jdrf"
                        ) }}</a></p>
            </div>
        </div>
    </div>
{% endblock body %}
