{% block body %}
  <style>
    body {
      margin: 0;
      padding: 0;
    }

    .demo-tabs {
      display: flex;
      flex-direction: column;
    }

    .demo-tab {
      display: none;
    }

    #all:checked ~ .demo-tab {
      display: block;
    }

    .demo-tab-radio {
      box-sizing: border-box;
      border-radius: 20px;
      border: solid 1px black;
      display: inline-block;
      height: 20px;
      width: 20px;
    }

    .demo-tab-input {
      display: none;
    }
  
    .demo-tab-input:checked + .demo-tab-radio-label .demo-tab-radio {
      border-width: 6px;
    }

    .demo-tab-radio-label {
      font-size: 14px;
      order: -1;
      vertical-align: middle;
    }

  </style>

