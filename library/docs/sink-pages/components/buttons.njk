{% extends "templates/sink.njk" %}
{% block body %}
    {% filter markdown(true, "hostile-sink-reset") %}
        # Buttons Sink
        ## Default Button
    {% endfilter %}
    {{ library.button(text="Default Button") }}

    {% filter markdown(true, "hostile-sink-reset") %}
        ## Default Button Disabled
    {% endfilter %}
    {{ library.button(text="Default Button Disabled", disabled="true") }}

     {% filter markdown(true, "hostile-sink-reset") %}
        ## Default Button Link
    {% endfilter %}
    {{ library.button(text="Default Button Link", href="#") }}

    {% filter markdown(true, "hostile-sink-reset") %}
        ## Default Button Submit
    {% endfilter %}
    {{ library.button(text="Default Button Submit", tag="input", type="submit") }}

    {% filter markdown(true, "hostile-sink-reset") %}
        ## Secondary Button
    {% endfilter %}
    {{ library.button(class="spirit-button--secondary", text="Secondary Button") }}

    {% filter markdown(true, "hostile-sink-reset") %}
        ## Secondary Grey
    {% endfilter %}
    {{ library.button(class="spirit-button--secondary-gray", text="Secondary Gray Button") }}

	{% filter markdown(true, "hostile-sink-reset") %}
        ## On Dark
    {% endfilter %}
	<div class="spirit-container--dark">
    	{{ library.button(text="Default Button On Dark") }}
	</div>

	{% filter markdown(true, "hostile-sink-reset") %}
        ## On Dark Disabled
    {% endfilter %}
	<div class="spirit-container--dark">
    	{{ library.button(text="Default Button Disabled On Dark", disabled="true") }}
	</div>

{% endblock body %}
