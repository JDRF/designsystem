{% extends "templates/sink.njk" %}
{% block body %}
    {% filter markdown(true, "hostile-sink-reset") %}
        # Buttons Sink
    {% endfilter %}
    <div class="spirit-container">
        <div class="spirit-row">
            <div class="spirit-col spirit-col--md-6 spirit-col--lg-4">

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Primary
                {% endfilter %}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ### Normal
                {% endfilter %}
                {{ library.button(text="Default Button") }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Hover
                {% endfilter %}
                {{ library.button(class="spirit-button--hover", text="Default Button Hover") }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Active
                {% endfilter %}
                {{ library.button(class="spirit-button--active", text="Default Button Active") }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Disabled
                {% endfilter %}
                {{ library.button(text="Default Button Disabled", disabled="true") }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Focus
                {% endfilter %}
                {{ library.button(class="spirit-button--focus", text="Default Button Focus") }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Default Button Link
                {% endfilter %}
                {{ library.button(text="Default Button Link", href="#") }}

                {% filter markdown(true, "hostile-sink-reset") %}
                    ## Default Button Submit
                {% endfilter %}
                {{ library.button(text="Default Button Submit", tag="input", type="submit") }}

            </div>

            <div class="spirit-col spirit-col--md-6 spirit-col--lg-4">

                {% filter markdown(true, "hostile-sink-reset") %}
