              </div>
              {{ library.modal(modal_id=modal_id) }}
            {% endcall %}

            {% call demo_tab(label="S Modal Simple", id="modal-demo-simple-s") %}
              {% set modal_id = "modal-demo-simple-s" %}
              <div class="spirit-long-form-text">
                  <h2>S Modal Simple</h2>
                  {{ library.button(text="Open Modal", modal_id=modal_id) }}
              </div>
              {% call library.modal(modal_id=modal_id, has_title=true, has_close=true) %}
                {{ library.modal_header(title_text="Simple", modal_id=modal_id) }}
              {% endcall %}
            {% endcall %}

            {% call demo_tab(label="S Modal Simple Footer", id="modal-demo-simple-foot-s") %}
