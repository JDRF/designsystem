                  {{ library.modal_header(title_text="Contacts", modal_id=modal_id, header_icons=[{ iconName: "search", buttonTitle: "Search" }, { iconName: "more-horizontal", buttonTitle: "More"}]) }}
                  {% call library.modal_content() %}
