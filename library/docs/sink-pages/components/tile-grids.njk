{% extends "templates/sink.njk" %}
{% block body %}
  <style>
    body {
      margin: 0;
      padding: 16px;
    }

    .demo-tabs {
      display: flex;
      flex-direction: column;
      max-width: 1240px;
      margin: 0 auto;
    }

    .demo-tab {
      display: none;
    }

    #all:checked ~ .demo-tab {
      display: block;
    }

    .demo-tab-radio {
      box-sizing: border-box;
      border-radius: 20px;
      border: solid 1px black;
      display: inline-block;
      height: 20px;
      width: 20px;
    }

    .demo-tab-input {
      display: none;
    }
  
    .demo-tab-input:checked + .demo-tab-radio-label .demo-tab-radio {
      border-width: 6px;
    }

    .demo-tab-radio-label {
      font-size: 14px;
      order: -1;
      vertical-align: middle;
    }

  </style>

  {% macro demo_tab(label, id) %}
    {% set sample_tiles %}
      <div class="spirit-col-6 spirit-col-md-4 spirit-col-lg-2">{{ library.tile() }}</div>
      <div class="spirit-col-6 spirit-col-md-4 spirit-col-lg-2">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-4 spirit-col-lg-2">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-4 spirit-col-lg-2">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-4 spirit-col-lg-2">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-4 spirit-col-lg-2">{{ library.tile(
       img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
    {% endset %}

    {% set sample_tiles_medium %}
      <div class="spirit-col-6 spirit-col-md-6 spirit-col-lg-3">{{ library.tile() }}</div>
      <div class="spirit-col-6 spirit-col-md-6 spirit-col-lg-3">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-6 spirit-col-lg-3">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-6 spirit-col-lg-3">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
    {% endset %}

    {% set sample_tiles_large %}
      <div class="spirit-col-12 spirit-col-md-4 spirit-col-lg-4">{{ library.tile() }}</div>
      <div class="spirit-col-12 spirit-col-md-4 spirit-col-lg-4">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-12 spirit-col-md-4 spirit-col-lg-4">{{ library.tile(
        img_src='/images/components/tile/onewalk_baloons.jpg',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
    {% endset %}

    {% set text_only_sample_tiles %}
      <div class="spirit-col-6 spirit-col-md-3 spirit-col-lg-2">{{ library.tile( img_src='') }}</div>
      <div class="spirit-col-6 spirit-col-md-3 spirit-col-lg-2">{{ library.tile(
        img_src='',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-3 spirit-col-lg-2">{{ library.tile(
        img_src='',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-3 spirit-col-lg-2">{{ library.tile(
        img_src='',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-3 spirit-col-lg-2">{{ library.tile(
        img_src='',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
      <div class="spirit-col-6 spirit-col-md-3 spirit-col-lg-2">{{ library.tile(
       img_src='',
        link_text="Ways to Fundraise Lorem ipsum dolor sit amet") }}</div>
    {% endset %}


    <style>
      #{{ id }}:checked ~ [data-tab='{{ id }}'] {
        display: block;
      }
    </style>
    <input class="demo-tab-input" type="radio" name="demo-tabs" id="{{ id }}">
    <label for="{{ id }}" class="demo-tab-radio-label hostile-sink-reset">
      <span class="demo-tab-radio"></span>
      <span class="demo-tab-radio-label-text">
        {{ label }}
      </span>
    </label>
    <div class="demo-tab" data-tab="{{ id }}">
      {{ caller() }}
    </div>
  {% endmacro %}

  <h1 class="hostile-sink-reset">Tile Grids Sink</h1>
  <div class="demo-tabs">
    <input class="demo-tab-input" type="radio" name="demo-tabs" id="all" checked>
    <label for="all" class="demo-tab-radio-label hostile-sink-reset">
      <span class="demo-tab-radio"></span>
      <span class="demo-tab-radio-label-text">
        All Demos
      </span>
    </label>

    {% call demo_tab(label="Grid Settings: spirit-col-6 spirit-col-md-4 spirit-col-lg-2", id="grid-3-up") %}
      <h2 class="hostile-sink-reset">Grid Settings: spirit-col-6 spirit-col-md-4 spirit-col-lg-2</h2>
      <div class="spirit-container">
        <div class="spirit-container__inner">
          {% call library.tile_grid() %}
            {{ sample_tiles | safe }}
          {% endcall %}
        </div>
      </div>
    {% endcall %}


    {% call demo_tab(label="Grid Settings: spirit-col-6 spirit-col-md-6 spirit-col-lg-3", id="grid-4-up") %}
      <h2 class="hostile-sink-reset">Grid Settings: spirit-col-6 spirit-col-md-6 spirit-col-lg-3</h2>
      <div class="spirit-container">
        <div class="spirit-container__inner">
          {% call library.tile_grid() %}
            {{ sample_tiles_medium | safe }}
          {% endcall %}
        </div>
      </div>
    {% endcall %}

    {% call demo_tab(label="Grid Settings: spirit-col-12 spirit-col-md-4 spirit-col-lg-4", id="grid-2-up") %}
      <h2 class="hostile-sink-reset">Grid Settings: spirit-col-12 spirit-col-md-4 spirit-col-lg-4</h2>
      <div class="spirit-container">
        <div class="spirit-container__inner">
          {% call library.tile_grid() %}
            {{ sample_tiles_large | safe }}
          {% endcall %}
        </div>
      </div>
    {% endcall %}

    {% call demo_tab(label="text-only", id="text-only-3-up") %}
      <h2 class="hostile-sink-reset">text only</h2>
      <div class="spirit-container">
        <div class="spirit-container__inner">
          {% call library.tile_grid() %}
            {{ text_only_sample_tiles | safe }}
          {% endcall %}
        </div>
      </div>
    {% endcall %}

  </div>
{% endblock body %}