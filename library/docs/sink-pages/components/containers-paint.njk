      {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Bottom - Large BG Inner (black)</h2>
  {% call library.container(size="large", inner_background_color='black', paint="bottom", padding_top="none") %}
      {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Padding options</h2>

  <h3 class="hostile-sink-reset">None</h3>
  {% call library.container(padding_top="none",padding_bottom="none", background_color='brand', paint="both") %}
    {{ sample_image_block | safe }}
  {% endcall %}

  <h3 class="hostile-sink-reset">XS</h3>
  {% call library.container(padding_top="xs",padding_bottom="xs", background_color='brand', paint="both") %}
    {{ sample_image_block | safe }}
  {% endcall %}

  <h3 class="hostile-sink-reset">S</h3>
  {% call library.container(padding_top="s",padding_bottom="s", background_color='brand', paint="both") %}
    {{ sample_image_block | safe }}
  {% endcall %}

  <h3 class="hostile-sink-reset">M (default)</h3>
  {% call library.container(padding_top="m",padding_bottom="m", background_color='brand', paint="both") %}
    {{ sample_image_block | safe }}
  {% endcall %}

  <h3 class="hostile-sink-reset">LG</h3>
