  <h1 class="hostile-sink-reset">Containers Paint</h1>

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG</h2>
  {% call library.container(background_color='brand', paint="both") %}
       {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG</h2>
  {% call library.container(background_color='brand', paint="both") %}
      {{ sample_longform_text | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG</h2>
  {% call library.container(background_color='brand', paint="both") %}
      {{ sample_longform_text_long | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG - large inner container</h2>
  {% call library.container(background_color='brand', paint="both", size="large") %}
       {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG - large inner container</h2>
  {% call library.container(background_color='brand', paint="both", size="large") %}
       {{ sample_longform_text | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG - large inner container</h2>
  {% call library.container(background_color='brand', paint="both", size="large") %}
       {{ sample_longform_text_long | safe }}
  {% endcall %}  

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Full BG (black)</h2>
  {% call library.container(background_color='black', paint="both") %}
      {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top - Full BG</h2>
  {% call library.container(background_color='brand', paint="top") %}
      {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Bottom - Full BG</h2>
  {% call library.container(background_color='brand', paint="bottom") %}
      {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Large BG Inner</h2>
  {% call library.container(size="large", inner_background_color='brand', paint="both") %}
      {{ sample_image_block | safe }}
  {% endcall %}

  <h2 class="hostile-sink-reset">Paint Top and Bottom - Large BG Inner (black)</h2>
