{% extends "templates/sink.njk" %}
{% block body %}
  <style>
    /* Adding a little bit of padding and left-aligning this sink page */
    body {
      line-height: 1;
      padding: {{ spirit_tokens.space.inset['1-x'] }};
      text-align: left;
    }

    .forms-sink-wrapper {
      margin: 0 auto;
      max-width: 700px;
    }
  </style>
  <h1 class="hostile-sink-reset">Password Input With Toggle</h1>

  {# wrapping the whole page to set a max width #}
  <div class="forms-sink-wrapper">

    <h2 class="hostile-sink-reset">Default (password hidden)</h2>
    {{ library.form_input(type="password", password_toggle=true, value="password") }}

    <h2 class="hostile-sink-reset">Password Visible By Default</h2>
    {{ library.form_input(type="password", password_toggle=true, password_toggle_visible=true) }}

    <h2 class="hostile-sink-reset">Content Resilience</h2>
    {{ library.form_input(type="password", password_toggle=true, value="A really really long password that you'll laugh at when you toggle it to visible cause it's so funny LOLOLOLOLOLOLOLOLOLOLOLOLOL") }}

  </div> {# closing div.forms-sink-wrapper #}
{% endblock body %}
