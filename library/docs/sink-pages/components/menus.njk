{% extends "templates/sink.njk" %}
{% block body %}

    {% call library.shell() %}
        {% call library.shell_header() %}
            {% call library.container(padding_top="none", padding_bottom="none") %}
                <div class="spirit-long-form-text">
                    <h1>
                        Menus
                    </h1>
                </div>
            {% endcall %}
        {% endcall %}
        <div class="spirit-container">
            <div class="spirit-container__inner spirit-container__inner--padding-top-none">
                <div class="spirit-row">
                    <div class="spirit-col spirit-col-md-6 spirit-col-lg-4">
                        <h2 class="hostile-sink-reset">Default</h2>
                        <div class="demo-page-grid">
                            <div>
                                <h5 class="hostile-sink-reset">Default</h5>
                                {{ library.menu(class="spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Hover</h5>
                                {{ library.menu(class="spirit-menu--hover spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Focus</h5>
                                {{ library.menu(class="spirit-menu--focus spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Active</h5>
                                {{ library.menu(class="spirit-menu--active spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Disabled</h5>
                                {{ library.menu(class="spirit-menu--disabled spirit-menu--hide-small") }}
                            </div>
                        </div>
                    </div>

                    <div class="spirit-col spirit-col-md-6 spirit-col-lg-4">
                        <h2 class="hostile-sink-reset">With Icon</h2>
                        <div class="demo-page-grid">
                            <div>
                                <h5 class="hostile-sink-reset">Default</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Hover</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--hover spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Focus</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--focus spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Active</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--active spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Disabled</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--disabled spirit-menu--hide-small") }}
                            </div>
                        </div>
                    </div>

                    <div class="spirit-col spirit-col-md-6 spirit-col-lg-4">
                        <h2 class="hostile-sink-reset">Arrows</h2>
                        <div class="demo-page-grid">
                            <div>
                                <h5 class="hostile-sink-reset">Top Left</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Top Center</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--center-arrow spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Top Right</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--right-arrow spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Bottom Left</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--bottom-arrow spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Bottom Center</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--bottom-arrow spirit-menu--center-arrow spirit-menu--hide-small") }}
                            </div>
                            <div>
                                <h5 class="hostile-sink-reset">Bottom Right</h5>
                                {{ library.menu(has_icon=true, class="spirit-menu--has-icon spirit-menu--bottom-arrow spirit-menu--right-arrow spirit-menu--hide-small") }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endcall %}
{% endblock body %}
