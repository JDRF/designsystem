{% extends "templates/sink.njk" %}
{% block head_content_append %}
  {{ super() }}
  <link rel="stylesheet" href="/styles/space-sink-page.css">
{% endblock head_content_append %}

{% block body %}  
  {% filter markdown(true, "hostile-sink-reset") %}
    # Space Sink    
  {% endfilter %}

  <div class="space-sink-demos">
    <div class="space-sink-demo-grid-item">
      <div class="space-sink-demo-box">
        {{ spirit_tokens['font']['family']['sans-serif'] }}
        This is text without any text crop.
      </div>
    </div>
    <div class="space-sink-demo-grid-item">
      <div class="space-sink-demo-box space-sink-demo-box--with-text-crop">
        {{ spirit_tokens['font']['family']['sans-serif'] }}
        This is text with text crop.
      </div>
    </div>
    <div class="space-sink-demo-grid-item">
      <div class="space-sink-demo-box space-sink-demo-box--with-text-crop font-size-l">
        {{ spirit_tokens['font']['family']['sans-serif'] }}
        This is text with text crop.
      </div>
    </div>
    <div class="space-sink-demo-grid-item">
      <div class="space-sink-demo-box space-sink-demo-box--with-text-crop font-size-s">
        {{ spirit_tokens['font']['family']['sans-serif'] }}
        This is text with text crop.
      </div>
    </div>
  </div>

  {% filter markdown(true, "hostile-sink-reset") %}
    # Image with text, no text crop    
  {% endfilter %}
  <div class="space-sink-demos space-sink-demos--with-border">
    <div class="space-sink-demo-grid-item">
      <img src="http://placehold.it/300x300" style="display: block;"/>
    </div>
    <div class="space-sink-demo-grid-item">
